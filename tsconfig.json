{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "outDir": "./dist",
    "allowJs": true,
    "noEmitOnError": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["src/**/*", "types/**/*.ts"]
}
